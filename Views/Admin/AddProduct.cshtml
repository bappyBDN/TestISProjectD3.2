@model FoodDeliveryApp.ViewModels.AddProductViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Product";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Add New Product</h3>
        </div>
        <div class="card-body">
            <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Item Name</label>
                    <input asp-for="ItemName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Availability</label>
                    <select asp-for="IsAvailable" class="form-control">
                        <option value="true">Available</option>
                        <option value="false">Unavailable</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product Image</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" required />
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add Product
                </button>
            </form>
        </div>
    </div>
</div>
