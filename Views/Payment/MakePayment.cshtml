@model FoodDeliveryApp.ViewModels.PaymentViewModel

<h2>Make Payment</h2>

<form asp-controller="Payment" asp-action="MakePayment" method="post">
    <input type="hidden" asp-for="OrderId" />
    <input type="hidden" asp-for="ProductName" />
    <input type="hidden" asp-for="Price" />

    <div class="mb-3">
        <label for="UserName" class="form-label">Your Name</label>
        <input asp-for="UserName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Payment Option</label>
        <select asp-for="PaymentOption" class="form-select">
            <option value="Cash on Delivery">Cash on Delivery</option>
            <option value="Online Payment">Online Payment</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="AmountPaid" class="form-label">Amount Paid</label>
        <input asp-for="AmountPaid" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Confirm Payment</button>
</form>
