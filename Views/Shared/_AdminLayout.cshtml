<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Admin Panel</title>

    <link rel="stylesheet" href="~/css/styles_chef.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <!-- Admin Navbar -->
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">HomeChefHub</a>
                <span class="navbar-text mx-auto text-white">Admin Panel</span>
                <a class="btn btn-danger" asp-controller="Admin" asp-action="Logout">Logout</a>
            </div>
        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="bg-dark text-white text-center py-3 mt-4">
            <p class="mb-0">Copyright © @DateTime.Now.Year HomeChefHub. All Rights Reserved.</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
