@model HomeChefHub.Models.Chef
@{
    ViewData["Title"] = "Chef Sign Up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles_chef.css"> 
</head>
<body>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert-danger">@ViewBag.ErrorMessage</div>
    }
    <div class="container">
       
        <!-- Left Panel with Branding -->
        <div class="left-panel">
            <div class="overlay">
                <h1 class="logo">Home Chef Hub</h1>
                <p>Join our community of talented chefs!</p>
            </div>
        </div>

        <!-- Right Panel with Form -->
        <div class="right-panel">
            <div class="form-box">
                <h2>REGISTER</h2>
                <p>CHEF..! IT'S YOUR PLACE</p>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert-danger">@ViewBag.ErrorMessage</div>
                }

                <form asp-action="SignUp" method="post">
                    @Html.AntiForgeryToken()
                    <input asp-for="Name" placeholder="Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <input asp-for="Email" placeholder="Email Address" required />
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <input asp-for="Phone" placeholder="Phone Number" required />
                    <span asp-validation-for="Phone" class="text-danger"></span>

                    <input asp-for="NID" placeholder="NID Number" required />
                    <span asp-validation-for="NID" class="text-danger"></span>

                    <input asp-for="Password" type="password" placeholder="Password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <button type="submit">CREATE ACCOUNT</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Include validation scripts at the bottom of the page -->
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
